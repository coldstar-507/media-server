# set up this file if not adequate and source it

SERVER_FOLDER="$HOME/.media-server"

PERMANENT_PATH=$SERVER_FOLDER/permanent
TEMPORARY_PATH=$SERVER_FOLDER/temporary

TEMP_META=$TEMPORARY_PATH/meta
TEMP_DATA=$TEMPORARY_PATH/data
TEMP_THUM=$TEMPORARY_PATH/thum
TEMP_TEMP=$TEMPORARY_PATH/temp

PERM_META=$PERMANENT_PATH/meta
PERM_DATA=$PERMANENT_PATH/data
PERM_THUM=$PERMANENT_PATH/thum
PERM_TEMP=$PERMANENT_PATH/temp

mkdir -p $TEMP_META $TEMP_DATA $TEMP_THUM $TEMP_TEMP
mkdir -p $PERM_META $PERM_DATA $PERM_THUM $PERM_TEMP


LOGS_PATH=$SERVER_FOLDER/logs
RATES_PATH=$SERVER_FOLDER/rates

mkdir -p $PERMANENT_PATH $TEMPORARY_PATH $LOGS_PATH $RATES_PATH

echo "server folder  : $SERVER_FOLDER"
echo "permanent path : $PERMANENT_PATH"
echo "temporary path : $TEMPORARY_PATH"
echo "logs path      : $LOGS_PATH"
echo "rates path     : $RATES_PATH"


SERVER_IP="localhost"
SERVER_PLACE="2000"
SERVER_PORT=8081
